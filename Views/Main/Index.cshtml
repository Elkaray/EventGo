@{
    ViewData["Title"] = "Home1 Page";

}

<div class="container vh-100 d-flex flex-column justify-content-center align-items-center">
    <!-- Centered Header -->
    <h1 class="display-4 text-center">Welcome to EventGo</h1>

    <!-- Centered Description -->
    <h3 class="lead text-center fw-semibold">All the fun in one place :)</h3>

    <div class="container vh-100 d-flex justify-content-center align-items-center">
        <div class="row text-center">
            <div class="col">

                <form asp-controller="Home" asp-action="Index" method="get">
                    <button type="submit" class="btn shadow rounded-3 d-flex flex-column align-items-center justify-content-between p-4 text-white"
                            style="width: 300px; height: 400px; border: none; background-image: url('@Url.Content("~/Cinema.jpg")'); background-size: cover; background-position: center; background-repeat: no-repeat;">
@*                         <h5 class="mb-2 fw-bold"></h5> *@
                    </button>
                </form>

            </div>
            
            <div class="col">
                
                <form asp-controller="Home1" asp-action="Index" method="get">
                    <button type="submit" class="btn shadow rounded-3 d-flex flex-column align-items-center justify-content-between p-4 text-white"
                            style="width: 300px; height: 400px; border: none; background-image: url('@Url.Content("~/Background.png")'); background-size: cover; background-position: center; background-repeat: no-repeat;">
                        <h5 class="mb-2 fw-semibold text-black">Padel</h5>
                    </button>
                </form>

            </div>
            <div class="col">
               

                <form asp-controller="Venues" asp-action="UserIndex" method="get">
                    <button type="submit" class="btn shadow rounded-3 d-flex flex-column align-items-center justify-content-between p-4 text-white"
                            style="width: 300px; height: 400px; border: none; background-image: url('@Url.Content("~/Marwan Pablo.jpeg")'); background-size: cover; background-position: center; background-repeat: no-repeat;">
                        <h5 class="mb-2 fw-bold text-black">Concerts</h5>
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Bootstrap JS -->
