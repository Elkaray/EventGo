@model EventGo.Models.Concert

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Concert</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!-- Ensure enctype is set for file upload -->
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ConcertId" />

            <!-- Concert Name -->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Concert Description -->
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Concert Artist -->
            <div class="form-group">
                <label asp-for="Artist" class="control-label"></label>
                <input asp-for="Artist" class="form-control" />
                <span asp-validation-for="Artist" class="text-danger"></span>
            </div>

            <!-- Concert Organizer -->
            <div class="form-group">
                <label asp-for="Organizer" class="control-label"></label>
                <input asp-for="Organizer" class="form-control" />
                <span asp-validation-for="Organizer" class="text-danger"></span>
            </div>

            <!-- Concert Date -->
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <!-- Display current image -->
            <div class="form-group">
                <label for="CurrentImage">Current Image</label>
                @if (!string.IsNullOrEmpty(ViewData["CurrentImage"] as string))
                {
                    <img src="@ViewData["CurrentImage"]" alt="Current Concert Image" width="200" />
                }
            </div>

            <!-- Image upload -->
            <div class="form-group">
                <label for="Image">Upload New Image (optional)</label>
                <input type="file" class="form-control" id="Image" name="imageFile" />
            </div>

            <!-- Venue selection -->
            <div class="form-group">
                <label asp-for="VenueId" class="control-label"></label>
                <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueId"></select>
                <span asp-validation-for="VenueId" class="text-danger"></span>
            </div>

            <!-- Submit button -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
